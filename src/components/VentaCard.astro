---
export interface Props {
  venta: {
    id: number;
    cantidad: number;
    total: number;
    fecha: string;
    productos: {
      nombre: string;
      precio: number;
    };
  };
}

const { venta } = Astro.props;
const fecha = new Date(venta.fecha).toLocaleDateString('es-CO', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
  hour: '2-digit',
  minute: '2-digit'
});
---

<div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 animate-fade-in">
  <div class="flex justify-between items-start mb-4">
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-baviera-black mb-1">{venta.productos.nombre}</h3>
      <p class="text-baviera-black-light text-sm">Cantidad: {venta.cantidad} unidades</p>
    </div>
    
    <div class="text-right">
      <div class="text-2xl font-bold text-baviera-yellow mb-1">
        ${venta.total.toLocaleString('es-CO')}
      </div>
      <p class="text-baviera-black-light text-xs">{fecha}</p>
    </div>
  </div>
  
  <div class="flex justify-between items-center pt-4 border-t border-gray-100">
    <span class="text-sm text-baviera-black-light">
      Precio unitario: ${venta.productos.precio.toLocaleString('es-CO')}
    </span>
    
    <div class="flex items-center text-green-600">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span class="text-sm font-medium">Completada</span>
    </div>
  </div>
</div>