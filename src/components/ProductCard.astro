---
export interface Props {
  producto: {
    id: number;
    nombre: string;
    stock: number;
    precio: number;
    categoria: string;
  };
}

const { producto } = Astro.props;
const stockStatus = producto.stock > 10 ? 'high' : producto.stock > 5 ? 'medium' : 'low';
const stockColors = {
  high: 'text-green-600 bg-green-100',
  medium: 'text-yellow-600 bg-yellow-100',
  low: 'text-red-600 bg-red-100'
};
---

<div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 animate-slide-up">
  <div class="flex justify-between items-start mb-4">
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-baviera-black mb-1">{producto.nombre}</h3>
      <p class="text-baviera-black-light text-sm capitalize">{producto.categoria}</p>
    </div>
    
    <span class={`px-3 py-1 rounded-full text-xs font-medium ${stockColors[stockStatus]}`}>
      {producto.stock} unidades
    </span>
  </div>
  
  <div class="flex justify-between items-center">
    <div class="text-2xl font-bold text-baviera-yellow">
      ${producto.precio.toLocaleString('es-CO')}
    </div>
    
    <div class="flex space-x-2">
      <button class="p-2 bg-baviera-yellow hover:bg-baviera-yellow-dark text-baviera-black rounded-lg transition-colors tooltip" title="Editar">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      </button>
      
      <button class="p-2 bg-baviera-red hover:bg-baviera-red-dark text-white rounded-lg transition-colors tooltip" title="Eliminar">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      </button>
    </div>
  </div>
</div>