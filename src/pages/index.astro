---
import Layout from '../layouts/Layout.astro';
import DashboardCard from '../components/DashboardCard.astro';
---

<Layout title="Dashboard">
  <div class="space-y-8">
    <!-- Header -->
    <div class="animate-fade-in">
      <h1 class="text-3xl font-bold text-baviera-black mb-2">Dashboard Principal</h1>
      <p class="text-baviera-black-light">Resumen general del negocio</p>
    </div>
    
    <!-- Cards de métricas -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <DashboardCard 
        title="Ventas Totales" 
        value="$2,450,000"
        icon="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
        color="yellow"
        change="+12.5%"
        changeType="positive"
      />
      
      <DashboardCard 
        title="Productos en Stock" 
        value="148"
        icon="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10"
        color="blue"
        change="-3 productos"
        changeType="negative"
      />
      
      <DashboardCard 
        title="Ventas Hoy" 
        value="23"
        icon="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
        color="green"
        change="+8 vs ayer"
        changeType="positive"
      />
      
      <DashboardCard 
        title="Productos Críticos" 
        value="7"
        icon="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 18.5c-.77.833.192 2.5 1.732 2.5z"
        color="red"
        change="Revisar stock"
        changeType="neutral"
      />
    </div>
    
    <!-- Gráficos y tablas -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Productos más vendidos -->
      <div class="bg-white rounded-2xl p-6 shadow-lg animate-slide-up">
        <h2 class="text-xl font-bold text-baviera-black mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-baviera-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
          Productos Más Vendidos
        </h2>
        
        <div class="space-y-4">
          <div class="flex items-center justify-between p-3 bg-baviera-gray rounded-lg">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-baviera-yellow rounded-full mr-3"></div>
              <span class="font-medium text-baviera-black">Cerveza Águila</span>
            </div>
            <span class="text-baviera-black-light">125 vendidas</span>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-baviera-gray rounded-lg">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-baviera-red rounded-full mr-3"></div>
              <span class="font-medium text-baviera-black">Gaseosa Coca-Cola</span>
            </div>
            <span class="text-baviera-black-light">98 vendidas</span>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-baviera-gray rounded-lg">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
              <span class="font-medium text-baviera-black">Agua en Botella</span>
            </div>
            <span class="text-baviera-black-light">87 vendidas</span>
          </div>
          
          <div class="flex items-center justify-between p-3 bg-baviera-gray rounded-lg">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
              <span class="font-medium text-baviera-black">Jugo Hit</span>
            </div>
            <span class="text-baviera-black-light">65 vendidas</span>
          </div>
        </div>
      </div>
      
      <!-- Ventas recientes -->
      <div class="bg-white rounded-2xl p-6 shadow-lg animate-slide-up">
        <h2 class="text-xl font-bold text-baviera-black mb-6 flex items-center">
          <svg class="w-6 h-6 mr-2 text-baviera-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Ventas Recientes
        </h2>
        
        <div class="space-y-4">
          <div class="flex items-center justify-between p-3 border-l-4 border-baviera-yellow bg-baviera-gray rounded-r-lg">
            <div>
              <p class="font-medium text-baviera-black">Cerveza Águila x6</p>
              <p class="text-sm text-baviera-black-light">Hace 15 min</p>
            </div>
            <span class="font-bold text-baviera-yellow">$18,000</span>
          </div>
          
          <div class="flex items-center justify-between p-3 border-l-4 border-baviera-red bg-baviera-gray rounded-r-lg">
            <div>
              <p class="font-medium text-baviera-black">Gaseosa Coca-Cola x4</p>
              <p class="text-sm text-baviera-black-light">Hace 32 min</p>
            </div>
            <span class="font-bold text-baviera-yellow">$8,000</span>
          </div>
          
          <div class="flex items-center justify-between p-3 border-l-4 border-blue-500 bg-baviera-gray rounded-r-lg">
            <div>
              <p class="font-medium text-baviera-black">Agua en Botella x12</p>
              <p class="text-sm text-baviera-black-light">Hace 1 hora</p>
            </div>
            <span class="font-bold text-baviera-yellow">$12,000</span>
          </div>
          
          <div class="flex items-center justify-between p-3 border-l-4 border-green-500 bg-baviera-gray rounded-r-lg">
            <div>
              <p class="font-medium text-baviera-black">Jugo Hit x8</p>
              <p class="text-sm text-baviera-black-light">Hace 2 horas</p>
            </div>
            <span class="font-bold text-baviera-yellow">$16,000</span>
          </div>
        </div>
        
        <div class="mt-6">
          <a href="/ventas" class="w-full bg-baviera-yellow hover:bg-baviera-yellow-dark text-baviera-black font-medium py-2 px-4 rounded-lg transition-colors inline-block text-center">
            Ver Todas las Ventas
          </a>
        </div>
      </div>
    </div>
    
    <!-- Acciones rápidas -->
    <div class="bg-white rounded-2xl p-6 shadow-lg animate-fade-in">
      <h2 class="text-xl font-bold text-baviera-black mb-6 flex items-center">
        <svg class="w-6 h-6 mr-2 text-baviera-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Acciones Rápidas
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <a href="/ventas" class="group p-4 bg-baviera-yellow hover:bg-baviera-yellow-dark rounded-xl transition-all duration-300 transform hover:scale-105">
          <div class="flex items-center">
            <svg class="w-8 h-8 mr-3 text-baviera-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span class="font-medium text-baviera-black">Nueva Venta</span>
          </div>
        </a>
        
        <a href="/inventario" class="group p-4 bg-baviera-red hover:bg-baviera-red-dark text-white rounded-xl transition-all duration-300 transform hover:scale-105">
          <div class="flex items-center">
            <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span class="font-medium">Añadir Producto</span>
          </div>
        </a>
        
        <a href="/reportes" class="group p-4 bg-baviera-black hover:bg-baviera-black-light text-white rounded-xl transition-all duration-300 transform hover:scale-105">
          <div class="flex items-center">
            <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="font-medium">Ver Reportes</span>
          </div>
        </a>
        
        <button class="group p-4 bg-gray-200 hover:bg-gray-300 text-baviera-black rounded-xl transition-all duration-300 transform hover:scale-105">
          <div class="flex items-center">
            <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="font-medium">Configuración</span>
          </div>
        </button>
      </div>
    </div>
  </div>
</Layout>

<style>
  .animate-fade-in {
    animation-delay: 0.1s;
    animation-fill-mode: both;
  }
  
  .animate-slide-up {
    animation-delay: 0.2s;
    animation-fill-mode: both;
  }
</style>